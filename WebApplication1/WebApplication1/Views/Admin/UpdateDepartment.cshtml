@model WebApplication1.Models.Department
@{
    ViewBag.Title = "UpdateDepartment";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>DepartmentID</label>
        @Html.EditorFor(model => model.DepartmentID, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div>
        <label>Department Name</label>
        @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div style="margin-top:20px;">
        <button class="btn btn-info">Update Department</button>
    </div>

</form>