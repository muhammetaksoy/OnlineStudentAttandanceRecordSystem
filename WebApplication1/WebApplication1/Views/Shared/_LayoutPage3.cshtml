@{
    if (Session["LoginID3"] == null)
    {
        Response.Redirect("~/Home/Index");
    }

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">
    <style>
        * {
            font-family: 'Roboto Mono', monospace;
        }

        .sidebar-wrapper .list-group {
            width: 22rem;
        }

        .sidebar-wrapper .sidebar-heading {
            padding: 0.875rem 1.25rem;
            font-size: 1.2rem;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        nav {
            background-color: #433d3c;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark position-fixed w-100" style="z-index:1;">
        <div class="container">
            <a class="navbar-brand" href="#">ONLINE STUDENT ATTANDANCE MANAGEMENT SYTEM</a>
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">UserName:@Session["UserName"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Login/LogOut3">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main>
        <div class="" id="wrapper">

            
            <div class="bg-light border-right position-fixed h-100 mt-5 sidebar-wrapper">
                <div class="sidebar-heading text-center list-group-item py-4 list-group-item-action bg-light ">Welcome :)</div>

                <div class="list-group list-group-flush text-center ">
                    <a href="/Student/Dashboard" class="list-group-item py-4 list-group-item-action bg-light"><i class="fas fa-chart-line mr-3"></i>Dashboard</a>
                    <a href="/Student/CheckAttandance" class="list-group-item py-4 list-group-item-action bg-light"><i class="fas fa-list-ol mr-3"></i>View My Attandances</a>
                    <a href="/Student/ViewMyCourses" class="list-group-item py-4 list-group-item-action bg-light"><i class="fas fa-book mr-3"></i>View My Courses</a>

                </div>
            </div>

            <div id="page-content-wrapper" class="container w-100 position-absolute" style="margin-left:420px;margin-top:80px;">
                @RenderBody()
            </div>
            

        </div>
    </main>

</body>
</html>
